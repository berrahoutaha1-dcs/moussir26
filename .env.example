# Application Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Database Configuration
DB_NAME=commercial_management.db
# DB_PATH is auto-detected (Electron userData path)
# Override if needed: DB_PATH=/custom/path/to/database

# Logging Configuration
LOG_LEVEL=debug
# Options: debug, info, warn, error
ENABLE_FILE_LOGGING=false
LOG_DIRECTORY=

# Performance Configuration
ENABLE_REQUEST_TIMING=true
SLOW_QUERY_THRESHOLD=1000

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_MONITORING=false

# Application Settings
APP_NAME=Commercial Management System
APP_VERSION=1.0.0

# Security (if needed in future)
# API_KEY=your-api-key-here
# SECRET_KEY=your-secret-key-here
