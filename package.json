{
  "name": "commercial-management-system",
  "version": "1.0.0",
  "description": "Desktop Commercial Management System",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none REACT_APP_ELECTRON=true npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build"
  },
  "keywords": [
    "electron",
    "react",
    "commercial",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-switch": "^1.2.6",
    "better-sqlite3": "9.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^11.0.2",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.3.11",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.commercial.management",
    "productName": "Moussir 26",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "src/backend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
